{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Webpack)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js" // 指向 Webpack 输出目录
      ],
      "preLaunchTask": "webpack: watch" // 改为 Webpack 监视任务
    },
    {
      "name": "Extension Tests (Webpack)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "webpack: watch"
    }
  ]
}