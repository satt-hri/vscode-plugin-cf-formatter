{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug my mjs file",
      "request": "launch",
      // "runtimeArgs": [
      //   "run-script",
      //   "debug"
      // ], 这个是运行npm 的时候。
      "runtimeExecutable": "node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "program": "${workspaceFolder}/src/test/cfc/0922.mjs"
    },
    
    
    {
      "name": "Run Extension (Webpack)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js" // 指向 Webpack 输出目录
      ],
      "preLaunchTask": "webpack: watch" // 改为 Webpack 监视任务
    },
    // {
    //   "name": "Extension Tests (Webpack)",
