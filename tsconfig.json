{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "**/*.test.ts"
  ]
}